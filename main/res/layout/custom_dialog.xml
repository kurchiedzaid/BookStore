<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dip"
    android:background="#f9f9f9">

    <TextView android:text="user" android:id="@+id/rank_dialog_text1"
        android:textSize="24dp" android:layout_marginTop="10dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:visibility="visible" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/descDialog"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000" />

    <RatingBar
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
        android:id="@+id/dialog_ratingbar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/rank_dialog_button"
        android:layout_height="wrap_content"
        android:text="Done"  android:focusable="false"
        android:layout_margin="5dip" android:textColor="#FFF8C6"
        android:textSize="20dip" android:layout_width="130dp"
        android:layout_gravity="center_horizontal"
        android:background="#6ac86a" />

</LinearLayout>
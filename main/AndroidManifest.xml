<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zaidk.bookstore" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="it.mappe.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Customer_Register" />
        <activity android:name=".AdminLogin" />
        <activity android:name=".AdminSide" />
        <activity android:name=".AddBook" />
        <activity android:name=".ViewBooks" />
        <activity android:name=".Fiction" />
        <activity android:name=".BookDetails" />
        <activity android:name=".SearchDatabase" />
        <activity android:name=".RecentlyAdded" />
        <activity android:name=".UserSide" />
        <activity android:name=".UserSideSearch" />
        <activity android:name=".Book_Details_customer" />

        <activity
            android:name=".WelcomeAdmin"
            android:label="@string/title_activity_welcome_admin"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
